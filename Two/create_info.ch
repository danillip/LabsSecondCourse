#!/bin/bash

# Параметры новой статьи
read -p "Введите название статьи: " article_name
read -p "Введите автора статьи: " author
read -p "Введите научное направление: " direction
read -p "Введите год написания: " year
read -p "Введите научный журнал: " journal

# Создание каталога для новой статьи
mkdir -p "$article_name"
cd "$article_name" || exit

# Создание текстовых файлов с информацией о статье
echo "$author" > "Автор.txt"
echo "$direction" > "Научное направление.txt"
echo "$year" > "Год написания.txt"
echo "$journal" > "Научный журнал.txt"

# Создание символических ссылок на текстовые файлы в каталогах критериев
cd ..

# Создание символической ссылки на папку статьи в каталоге "Авторы"
mkdir -p "Авторы/$author"
ln -s "$PWD/$article_name" "Авторы/$author/$article_name"

# Создание символической ссылки на папку статьи в каталоге "Научные направления"
mkdir -p "Научные направления/$direction"
ln -s "$PWD/$article_name" "Научные направления/$direction/$article_name"

# Создание символической ссылки на папку статьи в каталоге "Годы"
mkdir -p "Годы/$year"
ln -s "$PWD/$article_name" "Годы/$year/$article_name"

# Создание символической ссылки на папку статьи в каталоге "Научные журналы"
mkdir -p "Научные журналы/$journal"
ln -s "$PWD/$article_name" "Научные журналы/$journal/$article_name"

echo "Статья успешно добавлена в коллекцию."

